{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "build",
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  }
}
